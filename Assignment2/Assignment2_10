# Write a program which accept number from user and return addition of digits in that number.
# Input: 5187934
# Output: 37

def DigitSum(No):
    digit=0
    sum=0
    while(No!=0):
        digit=No%10
        sum=sum+digit
        No=No//10
    return sum

def main():
    value=int(input("Enter Number"))
    ret=DigitSum(value)
    print("Sum of digits is:",ret)

if __name__=="__main__":
    main()


